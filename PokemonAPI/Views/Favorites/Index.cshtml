@model FavoritePokemonViewModel


<html>
<head>
    <style>
        table, th, td {
            border: 2px solid black;
            border-collapse: collapse;
        }

            table.center {
                margin-left: auto;
                margin-right: auto;
            }
    </style>
</head>
<body>

    <table class="center">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Pokedex #</th>
            <th>Height
            <th>Weight
            <th>Type
            <th>Remove from Favorites
        </tr>
        
        @for (int i = 0; i < Model.Pokemon.Count; i++)
        {
            <tr>
                <td><img src="@Model.Pokemon[i].sprites.other.dream_world.front_default" width="100" height="100" />
                <td style="text-align:center">@Model.Pokemon[i].name.Substring(0, 1).ToUpper()@Model.Pokemon[i].name.Substring(1) </td>
                <td style="text-align:center">@Model.Pokemon[i].id</td>
                <td style="text-align:center">@Math.Round(@Model.Pokemon[i].height * .328, 2) ft</td>
                <td style="text-align:center">@Math.Round(Model.Pokemon[i].weight * .22, 2) lbs</td>
                <td style="text-align:center">@Model.Pokemon[i].types[0].type.name.Substring(0, 1).ToUpper()@Model.Pokemon[i].types[0].type.name.Substring(1)</td>
                
                <td style="text-align:center">
                    <a class="btn btn-danger" asp-action="RemoveFromFavorites" asp-controller="Favorites" asp-route-id="@Model.Favorites[i].Id">Remove @Model.Pokemon[i].name.Substring(0, 1).ToUpper()@Model.Pokemon[i].name.Substring(1)</a>
                </td>
            </tr>
            
        }


    </table>
</body>
</html>

